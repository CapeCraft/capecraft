{% extends "Templates/admin_layout.twig" %}

{% block body %}
<div class="content">
  <h1 class="text-center">{{username}}</h1>
  <hr />
  <div class="row justify-content-center">
    <div class="col-6">
      <h4 class="text-center">Change your password</h4>
      <form method="POST" action="/admin/account/profile/password">
        <div class="form-group">
          <label for="exampleInputEmail1" class="bmd-label-floating">Password</label>
          <input type="password" class="form-control" name="password" />
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1" class="bmd-label-floating">Confirm Password</label>
          <input type="password" class="form-control" name="confirmpassword" />
        </div>
        <button type="submit" class="btn btn-raised btn-info">Change Password</button>
      </form>
    </div>
  </div>
</div>
{% endblock %}
