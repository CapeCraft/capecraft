{% extends "Templates/layout.twig" %}

{% block body %}
<div class="content">
  <h1 class="text-center">{{blog['title']}}</h1>
  <hr />
  {{blog['html_content']|raw}}
  <hr />
  <div class="text-right">
    <img src="https://crafatar.com/avatars/{{blog['author']}}?size=100&helm" /><br />
    <strong>{{blog['username']}}</strong><br />
    <small>{{blog['posttime']|date('F j Y')}}}</small>
  </div>
</div>
{% endblock %}
