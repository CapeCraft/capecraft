{% extends "Templates/layout.twig" %}

{% block body %}
<div class="content text-center">
  <h1>Blogs</h1>
  <hr />
  {% for blog in blogList %}
  <div class="row">
    <div class="col-4">
      <img class="img-fluid" src="{{blog['thumbnail']}}"/><br />
      <strong>{{blog['username']}}</strong><br />
      <small>{{blog['posttime']|date('F j Y')}}</small>
    </div>
    <div class="col-6">
      <h4><a href="/blog/id/{{blog['id']}}">{{blog['title']}}</a></h4>
      <p>{{blog['html_content']|striptags|slice(0,500)}}...</p>
    </div>
  </div>
  <hr />
  {% endfor %}
  {% if blogList is empty %}
    <h2>There are currently no blogs! Be sure to check back soon</h2>
    <hr />
  {% endif %}
  <nav class="d-inline-block">
    <ul class="pagination">
      <li class="page-item">
        {% if pageNumber > 1 %}
          <a class="page-link" href="/blog/{{pageNumber-1}}" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
          </a>
        {% endif %}
      </li>
      {% if (pageNumber - 1) > 0 %}
        <li class="page-item"><a class="page-link" href="/blog/{{pageNumber-1}}">{{pageNumber-1}}</a></li>
      {% endif %}
      <li class="page-item active"><a class="page-link" href="/blog/{{pageNumber}}">{{pageNumber}}</a></li>
      {% if totalPages != pageNumber and totalPages > 0 %}
      <li class="page-item"><a class="page-link" href="/blog/{{pageNumber+1}}">{{pageNumber+1}}</a></li>
      <li class="page-item">
        <a class="page-link" href="/blog/{{pageNumber+1}}">
          <span aria-hidden="true">&raquo;</span>
          <span class="sr-only">Next</span>
        </a>
      </li>
      {% endif %}
    </ul>
  </nav>
</div>
{% endblock %}
